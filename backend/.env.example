NODE_ENV=development
PORT=4000

DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_textbook
REDIS_URL=redis://localhost:6379

JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# CSRF Protection
COOKIE_SECRET=your-cookie-secret-here
CSRF_TOKEN_EXPIRY=86400000  # 24 hours in milliseconds

# OpenAI API Key (GPT-4o-mini 채팅, GPT-4 교과서 생성, DALL-E 3 이미지 생성)
OPENAI_API_KEY=sk-xxxx...  # 모든 AI 기능에 사용

CORS_ORIGIN=http://localhost:3000

AWS_S3_BUCKET=ai-textbook-uploads
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100