{
  "dashboard": {
    "id": null,
    "uid": "digitalbook-costs",
    "title": "Cost Optimization - Digital Textbook Platform",
    "tags": ["digitalbook", "costs", "optimization"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "5m",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "type": "stat",
        "title": "Total Monthly Cost",
        "targets": [
          {
            "expr": "sum(digitalbook_monthly_cost_dollars)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "type": "stat",
        "title": "Cost per User",
        "targets": [
          {
            "expr": "sum(digitalbook_monthly_cost_dollars) / digitalbook_total_users",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 3
          }
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "type": "stat",
        "title": "AI API Cost (Today)",
        "targets": [
          {
            "expr": "increase(ai_api_cost_dollars[24h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "type": "stat",
        "title": "Infrastructure Utilization",
        "targets": [
          {
            "expr": "avg(digitalbook_resource_utilization_percent)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "type": "timeseries",
        "title": "Cost Trend by Category",
        "targets": [
          {
            "expr": "digitalbook_cost_by_category{category=\"infrastructure\"}",
            "legendFormat": "Infrastructure",
            "refId": "A"
          },
          {
            "expr": "digitalbook_cost_by_category{category=\"ai_api\"}",
            "legendFormat": "AI API",
            "refId": "B"
          },
          {
            "expr": "digitalbook_cost_by_category{category=\"storage\"}",
            "legendFormat": "Storage",
            "refId": "C"
          },
          {
            "expr": "digitalbook_cost_by_category{category=\"bandwidth\"}",
            "legendFormat": "Bandwidth",
            "refId": "D"
          },
          {
            "expr": "digitalbook_cost_by_category{category=\"database\"}",
            "legendFormat": "Database",
            "refId": "E"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD"
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "type": "piechart",
        "title": "Cost Distribution",
        "targets": [
          {
            "expr": "sum by(category) (digitalbook_cost_by_category)",
            "legendFormat": "{{ category }}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "type": "table",
        "title": "Top Cost Drivers",
        "targets": [
          {
            "expr": "topk(10, digitalbook_cost_by_resource)",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "type": "timeseries",
        "title": "AI Token Usage",
        "targets": [
          {
            "expr": "rate(ai_tokens_used_total[1h])",
            "legendFormat": "Tokens/hour",
            "refId": "A"
          },
          {
            "expr": "ai_api_cost_per_token * rate(ai_tokens_used_total[1h])",
            "legendFormat": "Cost/hour",
            "refId": "B"
          }
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 20},
        "type": "gauge",
        "title": "Budget Utilization",
        "targets": [
          {
            "expr": "(sum(digitalbook_monthly_cost_dollars) / digitalbook_monthly_budget) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 20},
        "type": "stat",
        "title": "Projected Monthly Cost",
        "targets": [
          {
            "expr": "predict_linear(digitalbook_daily_cost_dollars[7d], 30 * 86400)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 20},
        "type": "stat",
        "title": "Cost Savings (This Month)",
        "targets": [
          {
            "expr": "digitalbook_cost_savings_dollars",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 500}
              ]
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}